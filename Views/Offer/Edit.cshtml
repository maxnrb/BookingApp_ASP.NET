@model BookingApp.Models.Offer

@{
    ViewData["Title"] = "Edition Offre";
}

<div class="card main-card">
    <div class="card-header">
        <h3>Offre - Edition</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AccommodationId" />


            <div class="row form-group">
                <div class="col">
                    <label asp-for="PricePerNight" class="control-label"></label>
                    <div class="input-group mb-3">
                        <input asp-for="PricePerNight" class="form-control" placeholder="20" />
                        <span class="input-group-text">€</span>
                    </div>
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>

                <div class="col">
                    <label asp-for="CleaningFee" class="control-label"></label>
                    <div class="input-group mb-3">
                        <input asp-for="CleaningFee" class="form-control" placeholder="25" />
                        <span class="input-group-text">€</span>
                    </div>
                    <span asp-validation-for="CleaningFee" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col">
                    <label asp-for="StartAvailability" class="control-label"></label>
                    <input asp-for="StartAvailability" class="form-control" />
                    <span asp-validation-for="StartAvailability" class="text-danger"></span>
                </div>

                <div class="col">
                    <label asp-for="EndAvailability" class="control-label"></label>
                    <input asp-for="EndAvailability" class="form-control" />
                    <span asp-validation-for="EndAvailability" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center">
                <input type="submit" value="Sauvegarder" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-outline-secondary">Retour au CRUD</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
