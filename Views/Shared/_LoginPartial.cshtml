@using Microsoft.AspNetCore.Identity
@using BookingApp.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        User user = await UserManager.GetUserAsync(User);

        if (user != null)
        {
            if (user != null && await UserManager.IsInRoleAsync(user, "User"))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                        <span class="badge rounded-pill bg-primary">Utilisateur</span>
                    </a>
                </li>
            }
            else if (user != null && await UserManager.IsInRoleAsync(user, "Host"))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                        <span class="badge rounded-pill bg-success">Hôte</span>
                    </a>
                </li>
            }
            else if (user != null && await UserManager.IsInRoleAsync(user, "Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                        <span class="badge rounded-pill bg-danger">Admin</span>
                    </a>
                </li>
            }
        }

        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Mon compte</a>
        </li>

        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Déconnexion</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Inscription</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Connexion</a>
        </li>
    }
</ul>
